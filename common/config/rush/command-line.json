/**
 * This configuration file defines custom commands for the "rush" command-line.
 * More documentation is available on the Rush website: https://rushjs.io
 */
{
  "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/command-line.schema.json",

  /**
   * Custom "commands" introduce new verbs for the command-line.  To see the help for these
   * example commands, try "rush --help", "rush my-bulk-command --help", or
   * "rush my-global-command --help".
   */
  "commands": [
    {
      "name": "prettier",
      "commandKind": "global",
      "summary": "Used by the pre-commit Git hook. This command invokes Prettier to reformat staged changes.",
      "autoinstallerName": "rush-prettier",
      // This will invoke common/autoinstall/rush-prettier/node_modules/.bin/pretty-quick
      "shellCommand": "pretty-quick --staged",
      "safeForSimultaneousRushProcesses": true
    },
    {
      "name": "update-ts-refs",
      "commandKind": "global",
      "summary": "Used by pre-push Git hook. This command updates the Project references for TypeScript files.",
      "autoinstallerName": "rush-update-ts-refs",
      "shellCommand": "update-ts-references",
      "safeForSimultaneousRushProcesses": true
    },
    {
      "name": "build:watch",
      "commandKind": "bulk",
      "summary": "Build projects and watch for changes",
      "description": "For details, see the article \"Using watch mode\" on the Rush website: https://rushjs.io/",

      // use incremental build logic (important)
      "incremental": true,
      "enableParallelism": true,
      // Enable "watch mode"
      "watchForChanges": true
    },
    {
      "name": "typedoc",
      "commandKind": "global",
      "summary": "Generate TypeDoc documentation",
      "autoinstallerName": "rush-typedoc",
      "shellCommand": "typedoc",
      "safeForSimultaneousRushProcesses": true
    }
  ],

  /**
   * Custom "parameters" introduce new parameters for specified Rush command-line commands.
   * For example, you might define a "--production" parameter for the "rush build" command.
   */
  "parameters": []
}
