{
  "name": "foreman",
  "version": "0.0.0",
  "private": true,
  "description": "Package building tools",
  "repository": "fellwork/foreman",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "update-ts-references --configName tsconfig.packages.json --verbose true",
    "prepack": "pnpm -r prepack",
    "release": "pnpm test && standard-version && git push --follow-tags && pnpm publish",
    "test": "pnpm -r test"
  },
  "author": "Shane McGuirt <shane@fellwork.com>",
  "devDependencies": {
    "@fellwork/eslint-config": "latest",
    "@fellwork/prettier-config": "latest",
    "@rushstack/eslint-config": "latest",
    "@tsconfig/node16": "latest",
    "@types/node": "latest",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "eslint-plugin-prettier": "latest",
    "prettier": "latest",
    "pretty-quick": "latest",
    "rimraf": "^3.0.2",
    "standard-version": "latest",
    "typescript": "^4.6.3",
    "unbuild": "latest",
    "update-ts-references": "^2.4.1",
    "vitest": "latest"
  },
  "packageManager": "pnpm@6.32.3",
  "engines": {
    "node": ">=12.20.0",
    "pnpm": ">=6.32.3"
  },
  "prettier": "@fellwork/prettier-config"
}
