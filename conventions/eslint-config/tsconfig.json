{
  "extends": "./node_modules/@fellwork/foreman-typescript/tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./",
    "types": ["node"],
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "paths": {
      "@/*": ["src/*"],
      "@/shared/*": ["src/shared/*"],
      "@/configs/*": ["src/configs/*"]
    }
  },
  "include": ["./src/**/*"]
}
