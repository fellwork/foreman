{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": [
      "es2021"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "preserveSymlinks": false,
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2021"
  },
  "references": [
    {
      "path": "packages/build"
    },
    {
      "path": "packages/cli"
    },
    {
      "path": "packages/config"
    },
    {
      "path": "packages/esbuild-plugin"
    },
    {
      "path": "packages/externals"
    },
    {
      "path": "packages/foreman"
    },
    {
      "path": "packages/loader"
    },
    {
      "path": "packages/log"
    },
    {
      "path": "packages/tsc"
    }
  ]
}
